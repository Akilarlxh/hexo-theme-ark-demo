:root
  --pagenumber-color: #ffffff
  --pagenumber-current-color: #99362c
  --pagenumber-current-shadow-color: #572020
  --pagenumber-hover-color: #99362c
  --pagenumber-background-color: rgba(80, 80,80, 0.85)
[data-theme="dark"]
  --pagenumber-color: #ffffff
  --pagenumber-current-color: #1E7EE2
  --pagenumber-current-shadow-color: #104477
  --pagenumber-hover-color: #1E7EE2
  --pagenumber-background-color: rgba(55, 112, 143,0.5)
//页面分页器
#pagination
  font-family: 'UnidreamLED','TaikoMagic';
  .pagination
    text-align: center
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 35px;
    & > *
      z-index: 20
      display: inline-block
      margin: 0 6px
      min-width: 30px
      width: auto
      height: 35px
      line-height: 35px
      padding: 0 3px;
      color: var(--pagenumber-color)
    //背景阴影条
    &::after
      content ''
      position absolute
      width 100%
      height 25px
      left 0
      top 5px
      z-index -1
      background-image linear-gradient(to right, rgba(0, 0, 0, 0) 0%, var(--pagenumber-background-color) 40%, var(--pagenumber-background-color) 50%, var(--pagenumber-background-color) 60%, rgba(0, 0, 0, 0) 100%)
    & > :not(.space)
      &:hover
        background: var(--pagenumber-hover-color)
        color: var(--pagenumber-color)
    .page-number
      position: relative;
      &.current
        background var(--pagenumber-current-color)
        color var(--pagenumber-color)
        padding: 0px 3px;
        height: 35px;
        &:before
          content: '';
          position: absolute;
          top: 0px;
          left: -5px;
          width: 40px;
          height: 35px;
          z-index: -1;
          background: var(--pagenumber-current-shadow-color);
          clip-path: polygon(0 5px,5px 0,35px 0,40px 5px,0px 5px,0px 30px,5px 35px,35px 35px,40px 30px,0 30px);
// 文章内分页器
.pagination-post
  *
    transition: all 0.3s linear
  .pull-left,
  .pull-full-left
    display: flex;
    height: calc(100% - 300px);
    border-radius: 0 120px 120px 0
    width: 80px;
    background: linear-gradient(to left, transparent 50px,var(--ark-post-item-background) 50px, transparent);
    position: fixed;
    top: 150px;
    left: -80px;
    writing-mode: vertical-lr
    padding: 0px;
    justify-content: center;
    &:hover
      left: 0
    a
      width: 100%;
      height: auto;
      min-height: 280px
      display: flex;
      align-items: flex-start
      background: linear-gradient(to right, transparent 80px,var(--ark-post-item-background) 80px, var(--ark-post-item-background));
      padding: 30px 30px 30px 0px;
      position: relative
      clip-path: polygon(0 0,80px 0,80px calc(50% - 80px),100% calc(50% - 15px),80px calc(50% + 100px),80px 100%,0 100%);
      &::before
        content: ""
        position: absolute
        display: block
        background: var(--ark-post-item-font-color)
        right: 10px;
        width 30px;
        height 30px
        top: calc(50% - 20px);
        clip-path: polygon(78% 49%, 74% 0, 0 51%, 68% 100%, 57% 50%, 49% 71%, 26% 51%, 57% 24%);
      &::after
        content: ""
        position: absolute
        display: none
        background: var(--ark-post-item-border)
        right: 18px;
        transform: rotateZ(-38deg);
        width: 5px;
        height: 60px;
        top: calc(50% - 68px);
        border-radius: 2.5px;
  .pull-right,
  .pull-full-right
    display: flex;
    height: calc(100% - 300px);
    border-radius: 120px 0 0 120px
    width: 80px;
    background: linear-gradient(to right, transparent 50px,var(--ark-post-item-background) 50px, transparent);
    position: fixed;
    top: 150px;
    right: -80px;
    writing-mode: vertical-lr
    padding: 0px;
    justify-content: center;
    &:hover
      right: 0
    a
      width: 100%;
      height: auto;
      min-height: 280px
      display: flex;
      align-items: flex-end
      background: linear-gradient(to left, transparent 80px,var(--ark-post-item-background) 80px, var(--ark-post-item-background));
      padding: 30px 0px 30px 30px;
      position: relative
      clip-path: polygon(100% 0,calc(100% - 80px) 0,calc(100% - 80px) calc(50% - 80px),0 calc(50% - 15px),calc(100% - 80px) calc(50% + 100px),calc(100% - 80px) 100%,100% 100%);
      &::before
        content: ""
        position: absolute
        display: block
        background: var(--ark-post-item-font-color)
        left: 10px;
        width 30px;
        height 30px
        top: calc(50% - 20px);
        clip-path: polygon(22% 49%, 26% 0, 100% 51%, 32% 100%, 43% 50%, 51% 71%, 74% 51%, 43% 24%);
      &::after
        content: ""
        position: absolute
        display: none
        background: var(--ark-post-item-border)
        left: 18px;
        transform: rotateZ(38deg);
        width: 5px;
        height: 60px;
        top: calc(50% - 70px);
        border-radius: 2.5px;
  .prev_info,
  .next_info
    width: 80px;
    height: auto;
    line-height: 1;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--ark-post-item-font-color);
    text-shadow: 2px 2px 3px black
  //激活状态
  &.pagination-active
    .pull-left,
    .pull-right,
    .pull-full-left,
    .pull-full-right
      z-index: 999
      width: 130px;
      a
        &::after
          display: block
