#loading-box
  position fixed
  z-index 1000
  width 100vw
  height 100vh
  overflow hidden
  text-align center
  &.loaded
    z-index -1000
    .pokeball-loading
      display none

@keyframes rotateBall {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@-webkit-keyframes rotateBall {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(50deg);
  }
  0% {
    transform: rotate(360deg);
  }
}
.pokeball-back
  background: rgba(255,255,255,0.6)
  height: 100%
  width: 100%
.pokeball-loading
  height 48px
  width 264px
  position absolute
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)

.pokeball
  width 4px
  height 4px
  transform-origin 24px 24px
  animation rotateBall 1.5s infinite forwards

