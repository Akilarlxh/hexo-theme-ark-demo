    .ark-menu-pagination
      position: absolute
      bottom: 20px
    .menu-item-container,
    .menu-item-second-container
      width: 230px;
      height: 230px;
      overflow hidden
      border-radius: 50%
      position: relative
      .site-page
        clip-path: polygon(40% 0,45% 5%,55% 5%,60% 0,100% 0,100% 40%,95% 45%,95% 55%,100% 60%,100% 100%,60% 100%,55% 95%,45% 95%,40% 100%,0 100%,0 60%,5% 55%,5% 45%,0 40%,0 0)
        ark-menu-item()
        .site-page-link
          justify-content center
      // 二级菜单左半屏
      .site-cube-left
        position: absolute;
        top: 0;
        left: 0;
        clip-path: polygon(40% 0, 45% 5%, 50% 5%, 50% 95%, 45% 95%, 40% 100%, 0 100%, 0 60%, 5% 55%, 5% 45%, 0 40%, 0 0)
        ark-menu-item()
        .site-page-link
          justify-content flex-start
          padding-left: 10%
      // 二级菜单右半屏
      .site-cube-right
        clip-path: polygon(50% 5%,55% 5%,60% 0,100% 0,100% 40%,95% 45%,95% 55%,100% 60%,100% 100%,60% 100%,55% 95%,50% 95%)
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: center;
        overflow-y: scroll;
        height: 237px;
        .menu-item-second
          width: 230px;
          height: 230px;
          ark-menu-flexcenter()
          .site-page
            position: relative;
            .site-page-link
              justify-content flex-end
              padding-right: 10%
  #ark-menu-end-btn
    position: absolute;
    width: 60px;
    height: 60px;
    top: calc(50% + 210px);
    color: var(--ark-cab-border-color)
    opacity: 1
    transition: opacity 0.3s linear 0.2s
    &:hover
      color: var(--ark-post-item-font-hover)
      transition: all 0.3s
  //结束效果
  &.arkend
    //默认动画曲线效果
    *
      transition: all 0.7s linear 0.3s
    // 左侧水平仪
    .ark-menu-horizontal-left
      opacity: 0
      transition: opacity 0.3s linear 0.4s
    // 右侧水平仪
    .ark-menu-horizontal-right
      opacity: 0
      transition: opacity 0.3s linear 0.4s
    // 瞄准镜上方水平仪
    .ark-menu-horizontal-top
      opacity: 0
      transition: opacity 0.3s linear 0.3s
    // 瞄准镜下方水平仪
    .ark-menu-horizontal-bottom
      opacity: 0
      transition: opacity 0.3s linear 0.3s
    // 菜单栏主体
    #ark-menu
      clip-path: circle(0)
      transition: clip-path 0.3s linear 0.5s
    // 菜单栏关闭按钮
    #ark-menu-end-btn
      opacity: 0
      transition: opacity 0.2s linear
    

//动画部分
//左侧水平仪标尺上下移动
@keyframes horizontal-left-move
  from
    transform: skewX(5deg) translateY(10px)
  to
    transform: skewX(5deg) translateY(-10px)
//右侧水平仪标尺上下移动
@keyframes horizontal-right-move
  from
    transform: skewX(-5deg) translateY(10px)
  to
    transform: skewX(-5deg) translateY(-10px)
//中心水平仪标尺左右移动
@keyframes horizontal-center-move
  from
    left: -100px
  to
    left: 0px
          


          
