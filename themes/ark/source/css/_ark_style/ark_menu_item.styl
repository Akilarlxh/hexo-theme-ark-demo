//default color:
:root
  --ark-menu-background: rgba(80, 80, 80, 0.4) //卡片整体背景色
  --ark-menu-border: rgba(153, 54, 44,0.8) //卡片字体底衬颜色
[data-theme="dark"]
  --ark-menu-background: rgba(61, 147, 204, 0.4)
  --ark-menu-border: rgba(153, 54, 44,0.8)
  

// flex的居中属性，太多地方用到了，直接简化一下
ark-menu-flexcenter()
  display flex
  align-items center
  justify-content center
// 菜单选项的基本样式
ark-menu-item()
  display: block
  width: 230px;
  height: 230px;
  ark-menu-flexcenter()
  background: var(--ark-menu-background);
  box-shadow: 0 0 0 3px inset rgba(233,233,233,0.8);
  border-radius: 50%;
  overflow: hidden
  i.fa-fw,
  svg.icon
    position: absolute;
    width: 100px;
    height: 100px;
    opacity: 0.5;
    z-index: 999
  .site-page-link
    display: flex
    align-items: center
    z-index: 1000
    height: 50px;
    width: 150%;
    font-size: 30px;
    font-family: 'TaikoMagic';
    background: var(--ark-menu-border);
    color: white
    text-shadow: 2px 2px 3px #222222
    &:hover
      color: var(--ark-post-item-font-hover)
#ark-menu-box
  position fixed
  z-index 1001
  width 100vw
  height 100vh
  margin 0
  overflow hidden
  ark-menu-flexcenter()
  //初始化动画默认效果
  *
    transition: all 0.5s linear
  &.arksink
    z-index -1000
  //- 左侧水平仪
  .ark-menu-horizontal-left
    display: block;
    position: fixed;
    left: calc(50% - 550px);
    top: calc(50% - 200px);
    opacity: 1
    transition: opacity 0.3s linear
    .ark-menu-horizontal-left-line
      display: block;
      height: 400px;
      position: relative;
      width: 23px;
      background: repeating-linear-gradient(to top, white 0%,white 0.5%, transparent 0.51%,transparent 9.91%);
      animation: horizontal-left-move 2s ease-in-out infinite alternate
      &::before
        content: "";
        position: absolute;
        height: 400px;
        left: 0px;
        top: 3%;
        width: 4px;
        background: repeating-linear-gradient(to top, #fff 0%, #fff 3%, transparent 3.01%, transparent 9.91%);
        clip-path: inset(53% 0 0 0);
      &::after
        content: "";
        position: absolute;
        height: 400px;
        left: 0px;
        bottom: 3%;
        width: 4px;
        background: repeating-linear-gradient(to top, transparent 0%, transparent 6.9%, white 6.91%, white 9.91%);
        clip-path: inset(0 0 53% 0);
  //- 右侧水平仪
  .ark-menu-horizontal-right
    display: block;
    position: fixed;
    right: calc(50% - 550px);
    top: calc(50% - 200px);
    opacity: 1
    transition: opacity 0.3s linear
    .ark-menu-horizontal-right-line
      display: block;
      height: 400px;
      position: relative;
      width: 23px;
      background: repeating-linear-gradient(to top, white 0%,white 0.5%, transparent 0.51%,transparent 9.91%);
      animation: horizontal-right-move 2s ease-in-out infinite alternate
      &::before
        content: "";
        position: absolute;
        height: 400px;
        right: 0px;
        top: 3%;
        width: 4px;
        background: repeating-linear-gradient(to top, #fff 0%, #fff 3%, transparent 3.01%, transparent 9.91%);
        clip-path: inset(53% 0 0 0);
      &::after
        content: "";
        position: absolute;
        height: 400px;
        right: 0px;
        bottom: 3%;
        width: 4px;
        background: repeating-linear-gradient(to top, transparent 0%, transparent 6.9%, white 6.91%, white 9.91%);
        clip-path: inset(0 0 53% 0);
  //瞄准镜上方水平仪
  .ark-menu-horizontal-top
    display: block;
    position: fixed;
    height: 15px;
    width: 200px;
    left: calc(50% - 100px)
    bottom: calc(50% + 120px);
    overflow-x: hidden
    padding: 5px 0 0 0
    opacity: 1
    transition: opacity 0.3s linear
    // 水平仪上方小三角
    &::before
      content: "";
      height: 5px;
      width: 10px;
      display: block;
      background: #fff;
      position: absolute;
      bottom: 10px;
      left: 70%;
      clip-path: polygon(0 0,100% 0,50% 100%);
    // 刻度短线
    .ark-menu-horizontal-top-line
      height: 5px;
      width: 300px;
      position: relative;
      animation: horizontal-center-move 3s ease-in infinite alternate
      left: -50px;
      background: repeating-linear-gradient(to left, #fff 0%, #fff 0.5%, transparent 0.51%, transparent 2%);
      // 刻度长线
      &::before
        content: "";
        height: 10px;
        position: absolute;
        width: 300px;
        top: 0px;
        left: 0px;
        background: repeating-linear-gradient(to left, #fff 0%, #fff 0.5%, transparent 0.51%, transparent 10%);
  //瞄准镜下方水平仪
  .ark-menu-horizontal-bottom
    display: block;
    position: fixed;
    height: 15px;
    width: 200px;
    left: calc(50% - 100px)
    top: calc(50% + 120px);
    overflow-x: hidden
    padding: 0 0 5px 0
    opacity: 1
    transition: opacity 0.3s linear
    // 水平仪上方小三角
    &::before
      content: "";
      height: 5px;
      width: 10px;
      display: block;
      background: #fff;
      position: absolute;
      bottom: 0px;
      left: 30%;
      clip-path: polygon(0 100%,100% 100%,50% 0);
    .ark-menu-horizontal-bottom-line
      height: 5px;
      width: 300px;
      position: relative;
      animation: horizontal-center-move 3s ease-out infinite alternate
      left: -50px;
      top: 5px
      background: repeating-linear-gradient(to left, #fff 0%, #fff 0.5%, transparent 0.51%, transparent 2%);
      &::before
        content: "";
        height: 10px;
        position: absolute;
        width: 300px;
        bottom: 0px;
        left: 0px;
        background: repeating-linear-gradient(to left, #fff 0%, #fff 0.5%, transparent 0.51%, transparent 10%);
