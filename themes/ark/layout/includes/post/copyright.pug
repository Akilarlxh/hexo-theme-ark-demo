if theme.post_copyright.enable && page.copyright !== false
  - let author = page.copyright_author ? page.copyright_author : config.author
  - let url = page.copyright_url ? page.copyright_url : page.permalink
  - let license = page.license ? page.license : theme.post_copyright.license
  - let license_url = page.license_url ? page.license_url : theme.post_copyright.license_url
  //- 若有转载链接则为转载文章
  if page.copyright_url
    .post-copyright
      .post-copyright-title
        span.post-copyright-transpond= "转载"
        span.post-copyright-info= page.title
      .post-copyright-link
        a.post-copyright-url(href=url_for(url))= theme.post_copyright.decode ? decodeURI(url) : url

      .post-copyright-license
        span.post-copyright-info
          | 本文是转载文章，请支持原创作者，更多完整内容请访问 
          a(href=url_for(page.copyright_url) target='_blank')= author
          | 原文。
      svg.icon.post-copyright-decoration(aria-hidden="true")
        use(xlink:href="#icon-partial-discharge")
        
  else
    .post-copyright
      .post-copyright-title
        span.post-copyright-original= "原创" 
        span.post-copyright-title-text= page.title
      .post-copyright-link
        a.post-copyright-url(href=url_for(url))= theme.post_copyright.decode ? decodeURI(url) : url

      .post-copyright-license
        span.post-copyright-info
          | 本文是原创文章，采用 
          a(href=url_for(license_url) target='_blank')= license
          |  协议，若要完整转载，请注明来自 
          a(href=url_for(config.url) target='_blank')= author
      svg.icon.post-copyright-decoration(aria-hidden="true")
        use(xlink:href="#icon-menu-zizhanbaowei")


    
